<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.ui.detail.CreateOrUpdateActivity">

  <Toolbar
      android:id="@+id/toolbar"
      android:background="@color/white"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_width="match_parent"
      android:layout_height="80dp">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


      <ImageView
          android:id="@+id/btn_back"
          app:srcCompat="@drawable/ic_back"
          android:paddingHorizontal="4dp"
          android:paddingVertical="4dp"
          android:layout_width="24dp"
          android:layout_height="24dp"/>


      <TextView
          android:text="My Profile"
          android:layout_marginLeft="20dp"
          android:includeFontPadding="false"
          android:textSize="23sp"
          android:layout_weight="1"
          android:fontFamily="@font/bold"
          android:layout_width="0dp"
          android:layout_height="wrap_content"/>


    </LinearLayout>

  </Toolbar>

  <ScrollView
      app:layout_constraintTop_toBottomOf="@id/toolbar"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintBottom_toTopOf="@id/ll_bottom"
      android:layout_width="match_parent"
      android:layout_height="0dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

      <LinearLayout
          android:orientation="vertical"
          android:paddingHorizontal="30dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_oval"
            android:gravity="center"
            android:layout_width="113dp"
            android:layout_height="113dp">

          <TextView
              android:id="@+id/tv_code"
              android:textColor="@color/white"
              android:textSize="40sp"
              android:text="11"
              android:fontFamily="@font/light"
              android:includeFontPadding="false"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"/>

          <ImageView
              android:id="@+id/ic_icon"
              android:tint="@color/white"
              android:visibility="gone"
              app:srcCompat="@drawable/ic_account"
              android:layout_height="40dp"
              android:layout_width="40dp"
              tools:ignore="UseAppTint" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="24dp"
            android:textColor="@color/blue"
            android:text="Main Information"
            android:includeFontPadding="false"
            android:fontFamily="@font/light_italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="4dp"
            android:background="@color/dark_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:text="First Name"
              android:fontFamily="@font/medium"
              android:includeFontPadding="false"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <TextView
              android:text="*"
              android:fontFamily="@font/light"
              android:textColor="@color/red"
              android:includeFontPadding="false"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ic_round_blue"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <ImageView
              app:srcCompat="@drawable/ic_account"
              android:layout_width="32dp"
              android:padding="4dp"
              android:layout_height="24dp"
              app:tint="@color/blue" />

          <EditText
              android:id="@+id/et_first_name"
              android:layout_weight="1"
              android:background="@color/transparent"
              android:padding="8dp"
              android:textSize="14sp"
              android:hint="Enter first name.."
              android:fontFamily="@font/light"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:text="Last Name"
              android:fontFamily="@font/medium"
              android:includeFontPadding="false"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

          <TextView
              android:text="*"
              android:fontFamily="@font/light"
              android:textColor="@color/red"
              android:includeFontPadding="false"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ic_round_blue"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <ImageView
              app:srcCompat="@drawable/ic_account"
              android:layout_width="32dp"
              android:padding="4dp"
              android:layout_height="24dp"
              app:tint="@color/blue" />

          <EditText
              android:id="@+id/et_last_name"
              android:layout_weight="1"
              android:background="@color/transparent"
              android:padding="8dp"
              android:textSize="14sp"
              android:hint="Enter last name.."
              android:fontFamily="@font/light"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="24dp"
            android:textColor="@color/blue"
            android:text="Sub Information"
            android:includeFontPadding="false"
            android:fontFamily="@font/light_italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="4dp"
            android:background="@color/dark_gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:text="Email"
              android:fontFamily="@font/medium"
              android:includeFontPadding="false"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ic_round_blue"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <ImageView
              app:srcCompat="@drawable/ic_email"
              android:layout_width="32dp"
              android:padding="4dp"
              android:layout_height="24dp"
              app:tint="@color/blue" />

          <EditText
              android:id="@+id/et_email"
              android:layout_weight="1"
              android:background="@color/transparent"
              android:padding="8dp"
              android:textSize="14sp"
              android:hint="Enter email.."
              android:fontFamily="@font/light"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:text="Phone Number"
              android:fontFamily="@font/medium"
              android:includeFontPadding="false"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ic_round_blue"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <ImageView
              app:srcCompat="@drawable/ic_account"
              android:layout_width="32dp"
              android:padding="4dp"
              android:layout_height="24dp"
              app:tint="@color/blue" />

          <EditText
              android:id="@+id/et_phone_number"
              android:layout_weight="1"
              android:background="@color/transparent"
              android:padding="8dp"
              android:textSize="14sp"
              android:hint="Enter phone number.."
              android:fontFamily="@font/light"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

  </ScrollView>

  <LinearLayout
      android:id="@+id/ll_bottom"
      android:padding="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <TextView
        android:id="@+id/btn_submit"
        android:background="@drawable/ic_soft_blue"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:text="Update"
        android:fontFamily="@font/extra_bold"
        android:includeFontPadding="false"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="53dp"/>

    <TextView
        android:id="@+id/btn_remove"
        android:background="@drawable/ic_round_red"
        android:layout_marginTop="12dp"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:text="Remove"
        android:fontFamily="@font/medium"
        android:includeFontPadding="false"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="53dp"/>

  </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>